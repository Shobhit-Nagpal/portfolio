---
interface Contribution {
  repo: string;
  description: string;
  pr: string;
  status: 'merged' | 'open';
}

const contributions: Contribution[] = [
  {
    repo: "cpvalente/ontime",
    description: "refactor: event editor color picker",
    pr: "https://github.com/cpvalente/ontime/pull/1400",
    status: 'merged'
  },
  {
    repo: "cpvalente/ontime",
    description: "refactor: inline color picker",
    pr: "https://github.com/cpvalente/ontime/pull/1412",
    status: 'open'
  }
];
---

<section>
  <h2>Open Source</h2>
  <div class="contributions">
    {contributions.map((contrib) => (
      <a href={contrib.pr} class="contribution" target="_blank" rel="noopener noreferrer">
        <span class="repo">{contrib.repo}</span>
        <p class="description">{contrib.description}</p>
        <span class={`status ${contrib.status}`}>{contrib.status}</span>
      </a>
    ))}
  </div>
</section>

<style>
  section {
    margin-top: 6rem;
  }

  h2 {
    font-size: 2rem;
    color: #ffffff;
    margin-bottom: 2rem;
  }

  .contributions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 800px;
  }

  .contribution {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1rem;
    border: 1px solid #27272a;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s;
  }

  .contribution:hover {
    background-color: #27272a;
    transform: translateX(4px);
  }

  .repo {
    color: #ffffff;
    font-size: 0.9rem;
    min-width: 140px;
  }

  .description {
    color: #a1a1aa;
    margin: 0;
    flex-grow: 1;
  }

  .status {
    font-size: 0.8rem;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
  }

  .status.merged {
    background-color: #4c1d95;
    color: #c4b5fd;
  }

  .status.open {
    background-color: #064e3b;
    color: #6ee7b7;
  }
</style>
