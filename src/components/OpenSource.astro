---
interface Contribution {
  repo: string;
  description: string;
  pr: string;
  status: 'merged' | 'open';
}

const contributions: Contribution[] = [
  {
    repo: "cpvalente/ontime",
    description: "refactor: event editor color picker",
    pr: "https://github.com/cpvalente/ontime/pull/1400",
    status: 'merged'
  },
  {
    repo: "cpvalente/ontime",
    description: "refactor: inline color picker",
    pr: "https://github.com/cpvalente/ontime/pull/1412",
    status: 'merged'
  },
  {
    repo: "cpvalente/ontime",
    description: "feat: keyboard navigation on cuesheet table",
    pr: "https://github.com/cpvalente/ontime/pull/1483",
    status: 'merged'
  },
  {
    repo: "cpvalente/ontime",
    description: "feat: css editor",
    pr: "https://github.com/cpvalente/ontime/pull/1542",
    status: 'open'
  }
];
---

<section>
  <h2>Open Source</h2>
  <div class="contributions">
    {contributions.map((contrib) => (
      <a href={contrib.pr} class="contribution" target="_blank" rel="noopener noreferrer">
        <span class="repo">{contrib.repo}</span>
        <p class="description">{contrib.description}</p>
        <span class={`status ${contrib.status}`}>{contrib.status}</span>
      </a>
    ))}
  </div>
</section>

<style>
  section {
    margin-top: 6rem;
    padding: 0 1rem;
  }

  h2 {
    font-size: clamp(1.75rem, 4vw, 2rem);
    color: #ffffff;
    margin-bottom: 2rem;
  }

  .contributions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 800px;
  }

  .contribution {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    padding: clamp(0.75rem, 2vw, 1rem);
    border: 1px solid #27272a;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .contribution:hover {
    background-color: #27272a;
    transform: translateX(4px);
  }

  .repo {
    color: #ffffff;
    font-size: clamp(0.85rem, 2vw, 0.9rem);
    min-width: 120px;
  }

  .description {
    color: #a1a1aa;
    margin: 0;
    flex-grow: 1;
    font-size: clamp(0.85rem, 2vw, 0.9rem);
    line-height: 1.5;
  }

  .status {
    font-size: clamp(0.75rem, 2vw, 0.8rem);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    white-space: nowrap;
  }

  .status.merged {
    background-color: #4c1d95;
    color: #c4b5fd;
  }

  .status.open {
    background-color: #064e3b;
    color: #6ee7b7;
  }

  @media (max-width: 768px) {
    section {
      margin-top: 4rem;
    }

    .contribution {
      padding: 0.75rem;
      gap: 0.75rem;
    }

    .repo {
      min-width: 100px;
    }

    .status {
      padding: 0.2rem 0.6rem;
    }
  }

  @media (max-width: 480px) {
    .contribution {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .repo {
      min-width: unset;
    }

    .description {
      width: 100%;
    }

    .status {
      align-self: flex-start;
    }
  }
</style>
