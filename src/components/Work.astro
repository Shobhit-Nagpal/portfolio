---
interface WorkItem {
  company: string;
  duration: {
    start: string;
    end?: string;
  };
  accomplishments: string[];
}

const workHistory: WorkItem[] = [
  {
    company: "SapMen C.",
    duration: {
      start: "May 2024",
    },
    accomplishments: [
      "Worked on MailerOne, a mailing SaaS for winners",
      "Currently working on Upshot",
      "Built client projects such as Facility Management Software"
    ]
  }
];

const formatDuration = (duration: WorkItem['duration']) => {
  const end = duration.end || 'Present';
  return `${duration.start} - ${end}`;
};
---

<section>
  <h2>Work</h2>
  {workHistory.map((work) => (
    <div class="work-item">
      <div class="work-header">
        <h3>{work.company}</h3>
        <span class="duration">{formatDuration(work.duration)}</span>
      </div>
      <ul>
        {work.accomplishments.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>
  ))}
</section>

<style>
  section {
    margin-top: 6rem;
    padding: 0 1rem;
  }

  h2 {
    font-size: clamp(1.75rem, 4vw, 2rem);
    color: #ffffff;
    margin-bottom: 2rem;
  }

  .work-header {
    display: flex;
    align-items: baseline;
    gap: 1rem;
    margin-bottom: 1rem;
    flex-wrap: wrap;
  }

  h3 {
    color: #e4e4e7;
    font-size: clamp(1.1rem, 3vw, 1.25rem);
    margin: 0;
  }

  .duration {
    color: #71717a;
    font-size: clamp(0.85rem, 2vw, 0.9rem);
  }

  .work-item {
    margin-bottom: 3rem;
    max-width: 800px;
  }

  ul {
    list-style: none;
    padding: 0;
  }

  li {
    color: #a1a1aa;
    margin-bottom: 0.75rem;
    display: flex;
    align-items: flex-start;
    line-height: 1.5;
    font-size: clamp(0.95rem, 2.5vw, 1rem);
  }

  li::before {
    content: "â€¢";
    color: #525252;
    margin-right: 1rem;
    margin-top: 0.2rem;
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    section {
      margin-top: 4rem;
    }

    .work-header {
      gap: 0.75rem;
    }

    li {
      margin-bottom: 1rem;
      padding-right: 0.5rem;
    }

    li::before {
      margin-right: 0.75rem;
    }
  }

  @media (max-width: 480px) {
    section {
      margin-top: 3rem;
    }

    .work-header {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
